{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-a427efcc",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ami_name": "Sean Herron Packer {{timestamp}}",
	"ami_block_device_mappings": [
		{
			"device_name": "/dev/sdb",
			"virtual_name": "ephemeral0"
		}
	]
  }],
  "provisioners": [{
	    "type": "chef-solo",
		"cookbook_paths": [ "../vendor/cookbooks" ],
		"run_list": [ "packer::default" ]
  }]
}